#!/bin/bash

#############################################################
##		Modified from Jovian			                   ##
#############################################################

OUTPUT_DIR="${1}"
should_i_clean="no"

echo -e "The following files and folders will be deleted:"
echo -e "${OUTPUT_DIR}"
echo -e "${OUTPUT_DIR}/log/"
echo -e "profile/variables.yaml"
echo -e "sample_sheet.yaml\n\n"

if [ "${SKIP_CONFIRMATION}" == "TRUE" ]; then
    should_i_clean="yes"
else
    while read -r -p "Are you sure you wish to permanently delete these files and folders? [y/N] " response
    do
        response=${response,,}
        if [[ "${response}" =~ ^(yes|y)$ ]]; then
            should_i_clean="yes"
            break
        elif [[ "${response}" =~ ^(no|n)$ ]]; then
            echo -e "Aborting cleaning process on user request"
            exit 0
        else
            echo -e "Please answer with 'yes' or 'no'"
        fi
    done
fi

if [ "${should_i_clean}" == "no" ]; then
    exit 0
fi

if [ "${should_i_clean}" == "yes" ]; then
    echo -e "Removing Juno pipeline output:"
    echo -e "${OUTPUT_DIR}"
    echo -e "${OUTPUT_DIR}/log/"
    echo -e "profile/variables.yaml"
    echo -e "sample_sheet.yaml\n\n"

    a=(
    "${OUTPUT_DIR}"
    "sample_sheet.yaml"
    "profile/variables.yaml"
    )

    for i in "${a[@]}"; do
        echo "Removing \"${i}\""
        sleep 0.2
        rm -rf "${i}"
    done

fi